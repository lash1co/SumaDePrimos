@model DAL.Models.Registro
@{
    ViewData["Title"] = "Registrar Calculo";
}

<div class="text-center">
    <h2>Registrar Cálculo</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <form asp-asp-controller="Calculo" asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label">Usuario *:</label>
                    <input type="text" maxlength="100" asp-for="Usuario" class="form-control" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Limite" class="control-label">Límite *:</label>
                    <input type="number" min="0" max="99999" maxlength="5" asp-for="Limite" class="form-control" />
                    <span asp-validation-for="Limite" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </div>
            </form>
        </div>
    </div>  
    <br />
    @if (ViewData["Error"] != null)
    {
        <span class="text-danger">@ViewBag.Error</span>
    }
    <div>
        @if (ViewData["Resultado"] != null)
        {
            <h3>Resultado: @ViewData["Resultado"]</h3>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}