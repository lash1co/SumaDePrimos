@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid">
    <h2>Error</h2>
    <p>Se ha producido un error en la aplicación</p>
    <br />
    <p>Status Code: @Model.StatusCode</p>
    <p>Message Error: @Model.Message</p>
    <p>Path Error: @Model.Path</p>
</div>
